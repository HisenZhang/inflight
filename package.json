{
  "name": "inflight",
  "version": "3.5.1",
  "description": "Open source EFB Webapp - Electronic Flight Bag for route planning, navigation, and moving map",
  "main": "index.html",
  "scripts": {
    "test": "node tests/test-runner.js",
    "test:browser": "open tests/index.html",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm test && npm run test:e2e",
    "start": "open index.html",
    "serve": "http-server . -p 3000 -c-1",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "deploy": "npx wrangler pages deploy . --project-name=inflight",
    "deploy:docs": "npm run docs:build && npx wrangler pages deploy docs/.vitepress/dist --project-name=inflight-doc"
  },
  "keywords": [
    "flight-planning",
    "aviation",
    "navigation",
    "navlog",
    "offline-first",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "http-server": "^14.1.1",
    "jsdom": "^16.7.0",
    "vitepress": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/inflight.git"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/yourusername/inflight/issues"
  },
  "homepage": "https://github.com/yourusername/inflight#readme"
}
