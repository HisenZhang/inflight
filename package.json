{
  "name": "inflight",
  "version": "2.6.1",
  "description": "Lightweight web-based flight planning application with comprehensive navlog and interactive map display",
  "main": "index.html",
  "scripts": {
    "test": "node tests/test-runner.js",
    "test:browser": "open tests/index.html",
    "start": "open index.html",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "deploy": "npx wrangler pages deploy . --project-name=inflight",
    "deploy:docs": "npm run docs:build && npx wrangler pages deploy docs/.vitepress/dist --project-name=inflight-docs --config=wrangler-docs.toml"
  },
  "keywords": [
    "flight-planning",
    "aviation",
    "navigation",
    "navlog",
    "offline-first",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "jsdom": "^16.7.0",
    "vitepress": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/inflight.git"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/yourusername/inflight/issues"
  },
  "homepage": "https://github.com/yourusername/inflight#readme"
}
