<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>InFlight Documentation</title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="description" content="Complete documentation for InFlight flight planning and navigation tool">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
  <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>✈️</text></svg>">

  <!-- Theme -->
  <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/docsify@4/lib/themes/vue.css">

  <!-- Custom styles for aviation theme -->
  <style>
    :root {
      --theme-color: #00D9FF;
      --theme-color-dark: #00A8CC;
      --sidebar-width: 280px;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .sidebar {
      background-color: #1a1a1a;
      width: var(--sidebar-width);
    }

    .sidebar-nav {
      padding-bottom: 40px;
    }

    .sidebar-nav li {
      margin: 0;
    }

    .sidebar-nav li a {
      color: #e0e0e0;
      font-size: 14px;
      padding: 8px 25px;
    }

    .sidebar-nav > ul > li > strong {
      color: var(--theme-color);
      font-size: 13px;
      font-weight: 600;
      padding: 12px 25px 8px;
      display: block;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .sidebar-nav li.active>a {
      color: var(--theme-color);
      border-right: 3px solid var(--theme-color);
      font-weight: 600;
    }

    .sidebar-nav li a:hover {
      color: var(--theme-color);
      background-color: rgba(0, 217, 255, 0.1);
    }

    .app-name {
      font-family: 'Courier New', monospace;
      font-weight: bold;
      letter-spacing: 2px;
      font-size: 1.3em;
      margin: 20px 0;
    }

    .app-name a {
      color: var(--theme-color) !important;
    }

    code {
      background-color: #f5f5f5;
      color: #e83e8c;
      padding: 2px 6px;
      border-radius: 3px;
      font-size: 0.9em;
    }

    pre > code {
      background-color: #2d2d2d;
      color: #f8f8f2;
      padding: 1em;
      border-radius: 5px;
    }

    blockquote {
      border-left: 4px solid var(--theme-color);
      background-color: #f8f9fa;
      padding: 1em;
      margin: 1em 0;
    }

    blockquote p {
      margin: 0;
    }

    .markdown-section h1 {
      color: #2c3e50;
      border-bottom: 2px solid var(--theme-color);
      padding-bottom: 0.5em;
    }

    .markdown-section h2 {
      color: #34495e;
      border-bottom: 1px solid #eee;
      padding-bottom: 0.3em;
    }

    .markdown-section a {
      color: var(--theme-color);
      font-weight: 500;
    }

    .markdown-section a:hover {
      color: var(--theme-color-dark);
      text-decoration: underline;
    }

    .search input {
      background-color: #2d2d2d;
      border: 1px solid #444;
      color: #e0e0e0;
    }

    .search input:focus {
      border-color: var(--theme-color);
    }

    .matching-post {
      border-bottom: 1px solid #444;
    }

    .search .results-panel {
      background-color: #1a1a1a;
      border: 1px solid #444;
    }

    .search .results-panel a {
      color: #e0e0e0;
    }

    .search .results-panel a:hover {
      background-color: rgba(0, 217, 255, 0.1);
      color: var(--theme-color);
    }

    /* Table styles */
    table {
      border-collapse: collapse;
      width: 100%;
      margin: 1em 0;
    }

    table th {
      background-color: var(--theme-color);
      color: white;
      padding: 12px;
      text-align: left;
      font-weight: 600;
    }

    table td {
      padding: 10px 12px;
      border-bottom: 1px solid #e0e0e0;
    }

    table tr:hover {
      background-color: #f5f5f5;
    }

    /* Pagination */
    .docsify-pagination-container {
      margin-top: 2em;
      padding-top: 2em;
      border-top: 1px solid #e0e0e0;
    }

    /* Cover page */
    section.cover {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    section.cover h1 {
      font-size: 3em;
      color: white;
    }

    section.cover .cover-main > p:last-child a {
      background-color: var(--theme-color);
      color: white;
      border: none;
    }

    section.cover .cover-main > p:last-child a:hover {
      background-color: var(--theme-color-dark);
    }
  </style>
</head>
<body>
  <div id="app">Loading documentation...</div>

  <script>
    window.$docsify = {
      name: 'InFlight',
      repo: 'HisenZhang/inflight',
      homepage: 'README.md',
      loadSidebar: '_sidebar.md',
      subMaxLevel: 3,
      auto2top: true,
      relativePath: false,

      // Search plugin
      search: {
        maxAge: 86400000, // 1 day
        paths: 'auto',
        placeholder: 'Search documentation...',
        noData: 'No results found.',
        depth: 4,
        hideOtherSidebarContent: false
      },

      // Pagination
      pagination: {
        previousText: '← PREVIOUS',
        nextText: 'NEXT →',
        crossChapter: true,
        crossChapterText: true,
      },

      // Copy code
      copyCode: {
        buttonText: 'Copy',
        errorText: 'Error',
        successText: 'Copied!'
      },

      // Theme
      themeColor: '#00D9FF',

      // Alias paths for easier navigation
      alias: {
        '/user-guide/_sidebar.md': '/_sidebar.md',
        '/developer/_sidebar.md': '/_sidebar.md',
      },

      // External link target
      externalLinkTarget: '_blank',

      // Footer
      plugins: [
        function(hook, vm) {
          hook.beforeEach(function(html) {
            // Add edit on GitHub link
            const url = 'https://github.com/HisenZhang/inflight/blob/main/docs/' + vm.route.file;
            const editLink = '[Edit on GitHub](' + url + ')\n\n';
            return editLink + html;
          });

          hook.afterEach(function(html) {
            // Add footer
            return html + '\n\n---\n\n' +
              '<footer style="text-align: center; padding: 20px; color: #999;">' +
              '<p>Made with ❤️ for aviation enthusiasts | ' +
              '<a href="https://github.com/HisenZhang/inflight" target="_blank">GitHub</a> | ' +
              'Licensed under MIT</p>' +
              '</footer>';
          });

          hook.doneEach(function() {
            // Smooth scroll to top
            const content = document.querySelector('.content');
            if (content) {
              content.scrollTop = 0;
            }
          });
        }
      ]
    }
  </script>

  <!-- Docsify core -->
  <script src="//cdn.jsdelivr.net/npm/docsify@4"></script>

  <!-- Plugins -->
  <script src="//cdn.jsdelivr.net/npm/docsify/lib/plugins/search.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/docsify-copy-code@2"></script>
  <script src="//cdn.jsdelivr.net/npm/docsify-pagination@2/dist/docsify-pagination.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/docsify/lib/plugins/zoom-image.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/docsify/lib/plugins/external-script.min.js"></script>

  <!-- Syntax highlighting -->
  <script src="//cdn.jsdelivr.net/npm/prismjs@1/components/prism-bash.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/prismjs@1/components/prism-json.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/prismjs@1/components/prism-javascript.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/prismjs@1/components/prism-markdown.min.js"></script>
</body>
</html>
